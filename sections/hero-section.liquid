<!-- SECTION -->
<div class="section">
  <!-- container -->
  <div class="container">
    <!-- row -->
    <div class="row">
      <!-- shop -->
      {% for block in section.blocks %}
      <div class="col-md-4 col-xs-6">
        <div class="shop">
          <div class="shop-img">
            <img
              src="{{ block.settings.image_1 | img_url: 'master' }}"
              class=""
              alt=""
              width="auto"
              height="auto"
            >
          </div>
          <div class="shop-body">
            <h3>
              {% assign banner_text = section.settings.banner_text | split: ',' %}
                      {% for banner in banner_text %}
                        {{ banner | append: '<br>' }}
                      {% endfor %}
              Laptop<br>
              Collection
            </h3>
            <a href="#" class="cta-btn">Shop now <i class="fa fa-arrow-circle-right"></i></a>
          </div>
        </div>
      </div>
      {% endfor %}
      <!-- /shop -->
    </div>
    <!-- /row -->
  </div>
  <!-- /container -->
</div>
<!-- /SECTION -->

{% schema %}
{
  "name": "Hero Section",
  "enabled_on": {
    "templates": ["index"]
  },
  "blocks": [
    {
      "type": "hero_section",
      "name": "Select Image",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "image_1",
          "label": "Select Image"
        },
        {
          "type": "text",
          "id": "banner_text",
          "label": "Hero Title 1"
        },
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}